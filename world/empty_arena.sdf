      <static>1</static>
      <self_collide>0</self_collide>
      <enable_wind>0</enable_wind>
      <kinematic>0</kinematic>

      <plugin filename="ignition-gazebo-label-system" name="ignition::gazebo::systems::Label">
        <label>5</label>
      </plugin>

      <link name='ground_plane_link'>
