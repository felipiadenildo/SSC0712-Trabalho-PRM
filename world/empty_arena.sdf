          </geometry>
          <material>
            <ambient>0.8 0 0 1</ambient>
            <diffuse>1 0 0 1</diffuse>
          </material>
        </visual>

        <!-- Colisão geral como uma caixa envolvendo tudo -->
        <collision name="red_flag_collision">
          <pose>0.08 0 0.2 0 0 0</pose>
          <geometry>
            <box>
              <size>0.35 0.02 0.4</size>
            </box>
          </geometry>
        </collision>

        <!-- Inércia aproximada -->
        <inertial>
          <mass>0.1</mass>
          <inertia>
            <ixx>0.001</ixx>
            <iyy>0.001</iyy>
            <izz>0.001</izz>
          </inertia>
        </inertial>      
      </link>
    </model>


