    <model name="red_flag">
      <static>false</static>

      <plugin filename="ignition-gazebo-label-system" name="ignition::gazebo::systems::Label">
        <label>20</label>
      </plugin>

      <link name="red_flag_link">
        <!-- Posição da base do objeto no mundo -->
        <pose>-2.5 0 0.2 0 0 1.57079</pose>

        <!-- Mastro (cilindro) -->
        <visual name="pole_visual">
          <pose>0 0 0.2 0 0 0</pose>
          <geometry>
            <cylinder>
              <radius>0.015</radius>
              <length>0.4</length>
